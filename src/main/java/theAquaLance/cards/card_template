import static theAquaLance.AquaLanceMod.makeID;
import static theAquaLance.util.Wiz.*;

public class ${NAME} extends AbstractEasyCard {
    public final static String ID = makeID("${NAME}");
    // intellij stuff ${TYPE}, ${TARGET}, ${RARITY}, ${DAMAGE}, ${UPGRADE_DAMAGE}, ${BLOCK}, ${UPGRADE_BLOCK}, ${MAGIC}, ${UPGRADE_MAGIC}, ${COST}, ${UPGRADED_COST}
    #if (${DAMAGE} != "") private final static int DAMAGE = ${DAMAGE}#end
    #if (${UPGRADE_DAMAGE} != "") private final static int UPGRADE_DAMAGE = ${UPGRADE_DAMAGE}#end
    #if (${BLOCK} != "") private final static int BLOCK = ${BLOCK}#end
    #if (${UPGRADE_BLOCK} != "") private final static int UPGRADE_BLOCK = ${UPGRADE_BLOCK}#end
    #if (${MAGIC} != "") private final static int MAGIC = ${MAGIC}#end
    #if (${UPGRADE_MAGIC} != "") private final static int UPGRADE_MAGIC = ${UPGRADE_MAGIC}#end
    #if (${UPGRADED_COST} != "") private final static int UPGRADED_COST = ${UPGRADED_COST}#end

    public ${NAME}() {
        super(ID, ${COST},  CardType.#if ( ${TYPE.equals( "power" )} )POWER#elseif ( ${TYPE.equals( "skill" )} )SKILL#else ATTACK#end, CardRarity.#if ( ${RARITY.equals( "basic" )} )BASIC#elseif ( ${RARITY.equals( "common" )} )COMMON#elseif ( ${RARITY.equals( "uncommon" )} )UNCOMMON#elseif ( ${RARITY.equals( "rare" )} )RARE #else SPECIAL#end, CardTarget.#if ( ${TARGET.equals( "all_enemy" )} )ALL_ENEMY#elseif ( ${TARGET.equals( "self" )} )SELF#elseif ( ${TARGET.equals( "all" )} )ALL#elseif ( ${TARGET.equals( "none" )} )NONE#else  ENEMY#end);
        #if (${DAMAGE} != "")        baseDamage = DAMAGE;#end
        #if (${BLOCK} != "")        baseBlock = BLOCK;#end
        #if (${MAGIC} != "")        baseMagicNumber = magicNumber = MAGIC;#end
    }

    public void use(AbstractPlayer p, AbstractMonster m) {

    }

    public void upp() {
        #if (${UPGRADE_DAMAGE} != "")    upgradeDamage(UPGRADE_DAMAGE);#end
        #if (${UPGRADE_BLOCK} != "")    upgradeBlock(UPGRADE_BLOCK);#end
        #if (${UPGRADE_MAGIC} != "")    upgradeMagicNumber(UPGRADE_MAGIC);#end
